<h1>ログイン</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>  <!-- flash メッセージを表示 -->
  </div>
<% end %>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>